<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Telegram_profile" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Telegram_profile" parent="Base.Theme.Telegram_profile" />
    <style name="Theme.Telegram_profile.NoActionBarAndStatusBar">
        <item name="android:windowTranslucentStatus">false</item>
    </style>

    <style name="ProfileIcons" parent="">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin16</item>
        <item name="android:layout_marginEnd">@dimen/margin16</item>
        <item name="android:layout_marginTop">@dimen/margin16</item>
    </style>

    <style name="Circular">
        <item name="cornerSize">50%</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="FloatingActionCorners">
        <item name="cornerSize">55%</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="UserDetailsRegion">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="background">@color/white</item>
    </style>

    <style name="UserDetailsRegionChildrenWithoutDrawable">
        <item name="android:layout_height">@dimen/height32</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/margin16</item>
    </style>

    <style name="LargeDivider">
        <item name="android:layout_height">10dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="MediumDivider">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/margin16</item>
        <item name="android:backgroundTint">@color/light_gray</item>
    </style>

    <style name="SmallDivider">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">58dp</item>
        <item name="android:backgroundTint">@color/light_gray</item>
    </style>
    <style name="UserDetailsRegionChildrenWithDrawable">
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/margin16</item>
        <item name="android:gravity" >center_vertical </item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="drawableTint">@color/dark_gray</item>
    </style>

    <style name="SettingsHeight">
        <item name="android:layout_height" >45dp </item>
        <item name="android:gravity" >center_vertical </item>
    </style>

    <style name="UserDetailsRegionChildrenWithDrawableStar">
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/margin16</item>
        <item name="android:gravity" >center_vertical </item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="drawableTint">@color/purple</item>
    </style>

</resources>